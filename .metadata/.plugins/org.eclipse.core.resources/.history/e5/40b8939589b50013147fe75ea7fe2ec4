<?php
$array1=array(
    "name"=> "Plain T-Shirt1121",
    "type"=> "physical");
	$ch = curl_init();
curl_setopt($ch, CURLOPT_URL,"https://store-uzahrx.mybigcommerce.com/api/v2");
echo curl_setopt($ch, CURLOPT_POST, true);  // tell curl you want to post something
echo curl_setopt($ch, CURLOPT_POSTFIELDS, $array1); // define what you want to post
echo curl_setopt($ch, CURLOPT_RETURNTRANSFER, true); // return the output in string format
echo curl_exec ($ch); // execute
//var_dump($output); // show output
curl_close ($ch); // close curl handle


?>